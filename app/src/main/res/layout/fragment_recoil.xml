<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/btnAddInterval"
        style="@style/Widget.MaterialComponents.Button.TextButton"
        android:layout_width="72dp"
        android:layout_height="72dp"
        android:text="+"
        android:textColor="@color/teal_200"
        android:textSize="24sp"

        app:layout_constraintBottom_toBottomOf="@+id/tvInterval"
        app:layout_constraintEnd_toStartOf="@+id/tvInterval"
        app:layout_constraintTop_toTopOf="@+id/tvInterval"
        app:layout_constraintVertical_chainStyle="packed"
        app:rippleColor="@color/white" />

    <TextView
        android:id="@+id/tvInterval"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="108sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        app:layout_constraintVertical_chainStyle="packed"
        tools:text="1" />

    <Button
        android:id="@+id/btnReduceInterval"
        style="@style/Widget.MaterialComponents.Button.TextButton"
        android:layout_width="72dp"
        android:layout_height="72dp"
        android:text="-"
        android:textColor="@color/teal_200"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="@+id/tvInterval"
        app:layout_constraintStart_toEndOf="@+id/tvInterval"
        app:layout_constraintTop_toTopOf="@+id/tvInterval"
        app:layout_constraintVertical_chainStyle="packed"
        app:rippleColor="@color/white" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:text="@string/interval_time_sec"
        android:textSize="16sp"
        app:layout_constraintBottom_toTopOf="@+id/tvInterval"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="packed" />
</androidx.constraintlayout.widget.ConstraintLayout>